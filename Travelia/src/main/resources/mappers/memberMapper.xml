<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kitri.travelia.mapper.MemberMaper">
	<select id="getTime" resultType="string">
		select now()
	</select>
	<insert id ="insertMembertest">
		insert into member(mem_email,mem_pw,mem_nick)
		values (#{email},#{pw},#{nick})
	</insert>
	<insert id ="insertMember">
		insert into member(mem_email, mem_pw, mem_nick, mem_avt, mem_reg_date, mem_intro, mem_auto_pending, mem_auth_key) 
		values(#{email},#{pw},#{nick},#{avt},#{reg_date},#{intro},#{auth_pending},#{auth_key})
	</insert>
	<select id ="confirmEmail" resultType="Member" parameterType="String">
			select * from member where mem_email = #{mem_email}
	</select>
</mapper>